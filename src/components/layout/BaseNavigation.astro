---
import SiteNav from "@components/molecules/SiteNav.astro";
import SiteTitle from "@components/molecules/SiteTitle.astro";

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<header
  class="flex items-center justify-between border-b-4 border-black bg-white p-6"
>
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}
  <SiteTitle />
  <SiteNav />
</header>
