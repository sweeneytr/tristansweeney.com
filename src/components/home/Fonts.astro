---
const fonts = [
  {
    name: "Outfit",
    url: "https://fonts.google.com/specimen/Outfit",
    about:
      "A beautiful geometric sans: The official typeface for brand automation company outfit.io.",
    selector: ".outfit",
    fallback: "sans-serif",
  },
  {
    name: "Poppins",
    url: "https://fonts.google.com/specimen/Poppins",
    about:
      "Geometric sans serif typefaces have always been popular, and with support for both the Devanagari and Latin writing systems, Poppins is an internationalist addition to the genre.",
    selector: ".poppins",
    fallback: "sans-serif",
  },
  {
    name: "Righteous",
    url: "https://fonts.google.com/specimen/Righteous",
    about:
      "Righteous was initially inspired by the all capitals letterforms from the deco posters of Hungarian artist Robert Ber√©ny for Modiano.",
    fallback: "sans-serif",
    selector: ".righteous",
  },
  {
    name: "Sanchez",
    url: "https://fonts.google.com/specimen/Sanchez",
    about:
      "Sanchez is a slab serif typeface family from Chilean type foundry LatinoType.",
    fallback: "serif",
    selector: ".sanchez",
  },
  {
    fallback: "serif",
    url: "https://fonts.google.com/specimen/DM+Serif+Text",
    about:
      "DM Serif Text is a lower-contrast counterpart to the high-contrast DM Serif Display.",
    selector: ".dm-serif",
    name: "DM Serif Text",
  },
];
---

<h2 class="dm-serif mb-8 text-2xl md:text-4xl lg:text-6xl">Fonts</h2>
{
  fonts.map(({ name, selector, about, url }) => (
    <>
      <h3 class:list={[selector.substring(1), "text-4xl"]}>
        <a href={url} class="hover:underline-4 hover:underline">
          {name}
        </a>
      </h3>
      <p>{about}</p>
    </>
  ))
}
