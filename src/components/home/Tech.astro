---
import Pill from "@components/atoms/Pill.astro";

const builtWith = [
  { name: "Astro", url: "https://astro.build/" },
  { name: "Remix", url: "https://remix.run/" },
  { name: "Expo", url: "https://expo.dev/" },
  { name: "FastAPI", url: "https://fastapi.tiangolo.com/" },
  { name: "React Native", url: "https://reactnative.dev/" },
  { name: "Kubernetes", url: "https://kubernetes.io/" },
  { name: "ArgoCD", url: "https://argo-cd.readthedocs.io/en/stable/" },
  { name: "SQLAlchemy", url: "https://docs.sqlalchemy.org/" },
  { name: "Pydantic", url: "https://docs.pydantic.dev/latest/" },
];
---

<h2 class="sanchez mb-8 text-2xl md:text-4xl lg:text-6xl">Tech I love</h2>
<ul class="flex flex-wrap gap-4">
  {
    builtWith.map((item) => (
      <li>
        <Pill>
          <a
            class="sanchez"
            href={item.url}
            target="_blank"
            title={`Go to ${item.name}`}
          >
            {item.name}
          </a>
        </Pill>
      </li>
    ))
  }
</ul>
