---
import Pill from "@components/atoms/Pill.astro";

const tools = {
  "For Fun": [
    {
      name: "FromSoft Meme Generator",
      url: "https://rezuaq.be/new-area/image-creator/",
    },
  ],
  "Web Dev": [{ name: "Open Graph", url: "https://opengraph.dev/" }],
  Assets: [
    { name: "Favicon.cc", url: "https://www.favicon.cc/" },
    { name: "PixelArt.com", url: "https://www.pixilart.com" },
  ],
  Embedded: [{ name: "Compiler Explorer", url: "https://godbolt.org/" }],
};
---

<h2 class="poppins mb-8 text-2xl md:text-4xl lg:text-6xl">Useful Tools</h2>
<ul class="flex flex-col gap-4">
  {
    Object.entries(tools).map(([title, entries]) => {
      return (
        <li>
          <h3 class="text-xl md:text-2xl lg:text-4xl">{title}</h3>
          <ul class="flex flex-wrap gap-2">
            {entries.map((item) => (
              <li>
                <Pill>
                  <a
                    class="sanchez"
                    href={item.url}
                    target="_blank"
                    title={`Go to ${item.name}`}
                  >
                    {item.name}
                  </a>
                </Pill>
              </li>
            ))}
          </ul>
        </li>
      );
    })
  }
</ul>
