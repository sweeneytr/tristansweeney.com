---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import Tech from "@components/home/Tech.astro";
import Hero from "@components/home/Hero.astro";
import AboutMe from "@components/home/AboutMe.astro";
import Fullstack from "@components/home/Fullstack.astro";

import Card from "@components/atoms/Card.astro";
import Tools from "@components/home/Tools.astro";
import Fonts from "@components/home/Fonts.astro";
import Colors from "@components/home/Colors.astro";
import BuiltWith from "@components/home/BuiltWith.astro";
import PeanutGallery from "@components/home/PeanutGallery.astro";
import ProLinks from "../components/home/ProLinks.astro";
---

<Layout
  title="Tristan Sweeney"
  pageTitle="Tristan Sweeney |Â Home"
  description="Hi! I'm Tristan. I write software for fun, and also to get paid"
>
  <main class="bg-pink p-4">
    <MobileSocials />
    <section id="about" class="flex flex-row flex-wrap">
      <h2 class="hidden">About Me</h2>
      <div class="brick p-4 md:w-1/2">
        <Card class="bg-purple">
          <Hero />
        </Card>
      </div>
      <div class="brick-sizer brick p-4 md:w-1/4">
        <Card class="bg-orange">
          <Tech />
        </Card>
      </div>
      <div class="brick p-4 md:w-1/4">
        <Card class="bg-yellow">
          <Fullstack />
        </Card>
      </div>
      <div class="brick p-4 md:w-1/4">
        <Card class="bg-yellow">
          <Tools />
        </Card>
      </div>
      <div class="brick p-4 md:w-3/4">
        <Card class="bg-blue">
          <AboutMe />
        </Card>
      </div>
      <div class="brick p-4 md:w-1/4">
        <Card class="bg-fuchsia">
          <BuiltWith />
        </Card>
      </div>
      <div class="brick p-4 md:w-2/4">
        <Card class="bg-lime">
          <Fonts />
        </Card>
      </div>
      <div class="brick p-4 md:w-1/4">
        <Card class="bg-heliotrope">
          <Colors />
        </Card>
      </div>
      <div class="brick p-4 md:w-1/4">
        <Card class="bg-cyan">
          <PeanutGallery />
        </Card>
      </div>

      <div class="brick md:-3/4 p-4">
        <Card class="bg-fuchsia"><ProLinks /></Card>
      </div>

      <div class="brick p-4 md:w-1/2">
        <Card class="bg-yellow h-96">
          <script
            async
            src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8902921770361096"
            crossorigin="anonymous"></script>
          <!-- HomepageAd -->
          <ins
            class="adsbygoogle"
            style="display:block"
            data-ad-client="ca-pub-8902921770361096"
            data-ad-slot="7831879240"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
          <script>
            (window.adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </Card>
      </div>
    </section>
    <div class="px-4 pb-4">
      <RecentBlogPosts baseUrl="/blog" plural="blogposts" collection="blog" />
      <RecentBlogPosts
        baseUrl="/projects"
        plural="projects"
        collection="projects"
      />
    </div>
    <script>
      import Masonry from "masonry-layout";

      document.addEventListener("astro:page-load", () => {
        new Masonry("#about", {
          itemSelector: ".brick",
          columnWidth: ".brick-sizer",
          percentPosition: true,
          horizontalOrder: true,
        });
      });
    </script>
  </main>
</Layout>
