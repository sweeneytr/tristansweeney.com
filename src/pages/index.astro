---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import Tech from "@components/home/Tech.astro";
import Hero from "@components/home/Hero.astro";
import AboutMe from "@components/home/AboutMe.astro";
import Fullstack from "@components/home/Fullstack.astro";

import Card from "@components/atoms/Card.astro";
import Tools from "@components/home/Tools.astro";
import Fonts from "@components/home/Fonts.astro";
import Colors from "@components/home/Colors.astro";
import BuiltWith from "@components/home/BuiltWith.astro";
import PeanutGallery from "@components/home/PeanutGallery.astro";
---

<Layout
  title="Tristan Sweeney"
  pageTitle="Tristan Sweeney |Â Home"
  description="Hi! I'm Tristan. I write software for fun, and also to get paid"
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section
      id="about"
      class="mt-4 flex flex-row flex-wrap"
      data-masonry={JSON.stringify({
        itemSelector: ".brick",
        columnWidth: ".brick-sizer",
        percentPosition: true,
        horizontalOrder: true,
      })}
    >
      <h2 class="hidden">About Me</h2>
      <div class="brick md:w-1/2 p-4">
        <Card color="#c084fc">
          <Hero />
        </Card>
      </div>
      <div class="brick-sizer brick md:w-1/4 p-4">
        <Card color="#fb923c">
          <Tech />
        </Card>
      </div>
      <div class="brick md:w-1/4 p-4">
        <Card color="#facc15">
          <Fullstack />
        </Card>
      </div>
      <div class="brick md:w-1/4 p-4">
        <Card color="#facc15">
          <Tools />
        </Card>
      </div>
      <div class="brick md:w-3/4 p-4">
        <Card color="#60a5fa">
          <AboutMe />
        </Card>
      </div>
      <div class="brick md:w-1/4 p-4">
        <Card color="#fb7185">
          <BuiltWith />
        </Card>
      </div>
      <div class="brick md:w-2/4 p-4">
        <Card color="#a3e635">
          <Fonts />
        </Card>
      </div>
      <div class="brick md:w-1/4 p-4">
        <Card color="#e879f9">
          <Colors />
        </Card>
      </div>
      <div class="brick md:w-1/4 p-4">
        <Card color="#22d3ee">
          <PeanutGallery />
        </Card>
      </div>
    </section>
    <RecentBlogPosts baseUrl="/blog" plural="blogposts" collection="blog" />
    <RecentBlogPosts
      baseUrl="/projects"
      plural="projects"
      collection="projects"
    />
    <script>
      import "masonry-layout";
    </script>
  </main>
</Layout>
