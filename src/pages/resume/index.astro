---
import Layout from "@layouts/Default.astro";

import Card from "@components/atoms/Card.astro";
import CopyResumeLinkButton from "@components/resume/copyResumeLinkButton.astro";
import DownloadResumeButton from "@components/resume/downloadResumeButton.astro";
import SeriousExperience from "@components/resume/seriousExperience.astro";
import SeriousEducation from "@components/resume/seriousEducation.astro";
import SeriousExpertise from "@components/resume/seriousExpertise.astro";
import Button from "@components/atoms/Button.astro";
import InfoIcon from "../../components/atoms/icons/InfoIcon.astro";
---

<Layout
  title="Tristan Sweeney"
  pageTitle="Tristan Sweeney |Â Home"
  description="Hi! I'm Tristan. I write software for fun, and also to get paid"
  classList="flex flex-col min-h-screen"
>
  <main class="flex grow flex-col items-center bg-gray-300">
    <Button class="bg-emerald m-4 p-4" href="/resume/fun">
      <div class="flex flex-row items-center gap-2">
        <InfoIcon class="h-8 w-8" />
        <div>
          This is the serious version of my resume, click here for the fun
          version.
        </div>
      </div>
    </Button>

    <section
      id="resume"
      class="flex w-full flex-col items-stretch px-4 sm:mx-8"
    >
      <div class="flex flex-col items-center">
        <Card
          class="mb-8 flex w-full flex-col items-center gap-8 bg-white p-4 sm:w-4xl"
        >
          <SeriousExperience />
          <SeriousEducation />
          <SeriousExpertise />
        </Card>
      </div>
    </section>

    <div class="sticky bottom-0">
      <Card
        class="bg-emerald m-4 mt-0 flex flex-row items-center justify-center gap-8 px-8"
      >
        <CopyResumeLinkButton />
        <DownloadResumeButton />
      </Card>
    </div>
  </main>
</Layout>
