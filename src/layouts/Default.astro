---
import BaseNavigation from "@components/layout/BaseNavigation.astro";
import BaseFooter from "@components/layout/BaseFooter.astro";
import BaseHead from "../components/layout/BaseHead.astro";
import "../styles/global.css";
import { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<'body'> {
  title: string;
  description: string;
  pageTitle?: string;
  ogImage?: URL;
}

const { title, description, "class": className, pageTitle, ogImage } = Astro.props;
---

<html lang="en" class="h-full">
  <BaseHead ogImage={ogImage} title={title} description={description} />

  <body class={className}>
    <BaseNavigation {pageTitle} />
    <slot />
    <BaseFooter />
    <style>
      body:before {
        content: "";
        position: fixed;
        top: -50%;
        right: -50%;
        bottom: 50%;
        left: -50%;
        z-index: -1;
        background: white;
      }
      body:after {
        content: "";
        position: fixed;
        top: 50%;
        right: -50%;
        bottom: -50%;
        left: -50%;
        z-index: -1;
        background: black;
      }
    </style>
  </body>
</html>
